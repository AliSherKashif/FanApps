<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mm.fanapps.fanapps" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/MyMaterialTheme" >
        <activity
            android:name=".activities.Splash"
            android:configChanges="keyboard|orientation|screenSize|keyboardHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.First"
            android:configChanges="keyboard|orientation|screenSize|keyboardHidden"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".activities.Home"
            android:configChanges="keyboard|orientation|screenSize|keyboardHidden"
            android:label="@string/app_name" >
        </activity>

        <activity
            android:name=".activities.YoutubePlayer"
            android:configChanges="keyboard|orientation|screenSize|keyboardHidden"
            android:label="@string/app_name" >
        </activity>

        <service android:name=".utilities.RssService" />

    </application>

</manifest>
